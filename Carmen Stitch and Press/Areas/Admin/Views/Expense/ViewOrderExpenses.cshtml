@{
    ViewData["Title"] = "Order Expenses";
}

@model ExpenseViewModel

<div class="container-lg">
    <input hidden value="@Model.OrderId" id="orderId"/>
    <div class="card shadow border-0 my-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">@Model.OrderName's Expenses</h2>
                </div>
            </div>
        </div>
        <div class="card-body px-2 py-2">
            <div class="row pb-3">
                <div class="col-6 text-start">
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <a asp-area="Admin" asp-controller="Expense" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-skip-backward"></i> Back
                        </a>
                    </div>
                </div>
                <div class="col-6 text-end">
                    <button id="@Model.OrderId" class="btn text-center addOrderExpenseBtn text-nowrap btn-primary">
                        <i class="bi bi-database-add"></i>
                        <span class=""> Add Expense</span>
                    </button>
                </div>
            </div>
            <div class="pb-2">
                <span class="fs-5">Order Qty: @Model.OrderTotalQty</span>
            </div>
            <div class="">
                <table id="expensesTbl" class="table table-bordered table-striped  hover table-responsive">
                    <thead>
                        <tr>
                            <th class="text-center text-nowrap">Spend Date</th>
                            <th class="text-nowrap">Description</th>
                            <th class="text-center text-nowrap">Amount</th>
                            <th class=""></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Total:</th> 
                            <th></th> <!-- Total will be placed here -->
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>
</div>

<div id="addOrderExpenseModal"></div>

@section Scripts{

    <script src="~/js/Views/Areas/Admin/Expense/ViewOrderExpenses.js" asp-append-version="true"></script>
    <script src="~/js/Views/Areas/Admin/Expense/AddOrderExpense.js" asp-append-version="true"></script>
}