@page
@model VerifyLoginCodeModel
@{
    ViewData["Title"] = "Verify Login Code";
}

<div class="m-3">
    <h1>Verify Login Code</h1>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group">
            <label asp-for="Input.Code" class="control-label"></label>
            <input asp-for="Input.Code" class="form-control" />
            <span asp-validation-for="Input.Code" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="ReturnUrl" />
        <button type="submit" class="btn btn-primary mt-3">Verify</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
